        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editSurenameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/grey_text" />

            <Button
                android:id="@+id/editSurenameButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:text="Button"
                android:textColor="@color/grey_text" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/emailLayout"
        android:layout_width="313dp"
        android:layout_height="65dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surenameLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editEmailInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/grey_text" />

            <Button
                android:id="@+id/editEmailButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:text="Button"
                android:textColor="@color/grey_text" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/phoneLayout"
        android:layout_width="313dp"
        android:layout_height="65dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/phoneTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editPhoneInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
