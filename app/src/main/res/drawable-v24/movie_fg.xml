<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:gradientRadius="110%"
                android:centerY="60%"
                android:type="radial"
                android:centerColor="#00000000"
                android:startColor="#00000000"
                android:endColor="#141217"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerX="8%"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:startColor="#141217"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape
            android:layout_width="wrap_content"
            android:shape="rectangle">
            <gradient
                android:centerColor="#00000000"
                android:centerX="-170%"
                android:centerY="50%"
                android:endColor="#00000000"
                android:gradientRadius="400%"
                android:startColor="#141217"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:gradientRadius="400%"
                android:centerY="50%"
                android:centerX="270%"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:startColor="#141217"
                android:type="radial" />
        </shape>
    </item>
</layer-list>